<div class="row">
  <div class="small-12 columns panel round text-center">
    <h1>Your Top Recommendations</h1>
  </div>
</div>

<% @recommendations.each do |recommendation| %>
  <div class="row small-collapse">
    <div class="small-10 small-centered columns panel round">
      <%= image_tag(recommendation.poster) %>
      <div class="small-9 columns right">
        <%= "#{recommendation.title}" %>
        <%= "(#{recommendation.year})" %>
      </div>
    </div>
  </div>
<% end %>

<div style="clear:both"></div>
