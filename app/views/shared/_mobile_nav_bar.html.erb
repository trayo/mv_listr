<ul class="title-area">
  <li class="name">
    <h1><%= link_to "MV Listr", root_path, class: "title-small" %></h1>
  </li>
    <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
  <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
</ul>

<section class="top-bar-section">
  <ul class="left">
    <% if current_user %>
      <li class="has-form">
      <%= form_tag recommendations_path, method: "post" do %>
        <div class="row collapse">
          <div class="small-7 columns">
            <%= text_field_tag "search_2", nil, placeholder: "Add a movie"  %>
          </div>
          <div class="small-5 columns">
            <%= submit_tag "Search", class: "font-position-small secondary button"  %>
          </div>
        </div>
      <% end %>
      </li>
    <% end %>
  </ul>

  <ul class="right">
    <% if current_user %>
      <li>
        <%= link_to "Recommendations", recommendations_path, class: "font-size" %>
      </li>
      <li>
        <%= link_to "Watched Recommendations", recommendations_watched_path, class: "font-size" %>
      </li>
      <li class="active">
        <%= link_to "Sign out", logout_path, method: :delete, class: "font-size" %>
      </li>
    <% else %>
      <li class="active">
        <%= link_to "Login with Twitter", auth_twitter_path, class: "font-size" %>
      </li>
    <% end %>
  </ul>
</section>
