<%if flash[:alert] %>
  <div data-alert class="size-and-font alert-box success radius">
    <%= flash[:alert] %>
    <a href="#" class="close">&times;</a>
  </div>
<%end%>

<%if flash[:notice] %>
  <div data-alert class="size-and-font alert-box warning">
    <%= flash[:notice] %>
    <a href="#" class="close">&times;</a>
  </div>
<%end%>
